#!/usr/bin/env bash

_HOST="127.0.0.1"
_PORT="10808"

if [[ "$#" -eq 1 ]]; then
    if [[ "$1" =~ ^[0-9]+$ ]] && [ "$1" -ge 1 ] && [ "$1" -le 65535 ]; then
        _PORT="$1"
    else
        echo "[ERROR] Port should be an integer between 1~65535"
    fi
fi

if [ -n "$SSH_CONNECTION" ]; then
    _HOST=$(echo "$SSH_CONNECTION" | awk '{print $1}')
    if [ -z "$_HOST" ]; then
        echo "[WARNING] Could not get ssh host info, using localhost instead."
        _HOST="127.0.0.1"
    fi
fi

if [ -n "$HTTP_PROXY" ] || [ -n "$HTTPS_PROXY" ]; then
    unset HTTP_PROXY
    unset HTTPS_PROXY
    echo "Proxy Removed!"
else
    HTTP_PROXY="socks5://$_HOST:$_PORT"
    HTTPS_PROXY="socks5://$_HOST:$_PORT"
    echo "HTTP_PROXY=$HTTP_PROXY"
    echo "HTTPS_PROXY=$HTTPS_PROXY"
fi
