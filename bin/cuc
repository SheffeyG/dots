#!/usr/bin/env bash

cuda_home="/usr/local/cuda-$1"

if [ ! -d "$cuda_home" ]; then
    echo "[ERROR] Could not find cuda path '$cuda_home'" >&2
    exit 1
fi

export CUDA_HOME="$cuda_home"
export PATH="$cuda_home/bin:$PATH"
export LD_LIBRARY_PATH="$cuda_home/lib64${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"
