{
  "$schema": "./schema.json",
  "widgets": [
    // =========== buttons ===========
    {
      "pin-with-key": false,
      "edge": "top",
      "position": "left",
      "layer": "overlay",
      "margins": {
        "left": "25%"
      },
      "thickness": 7,
      "extra-trigger-size": 7,
      "length": "25%",
      "type": "btn",
      "color": "#333",
      "event-map": {
        "mouse-left": "niri msg action focus-column-left",
        "mouse-right": "niri msg action focus-workspace-up"
      }
    },
    {
      "pin-with-key": false,
      "edge": "top",
      "position": "right",
      "layer": "overlay",
      "margins": {
        "right": "25%"
      },
      "thickness": 7,
      "extra-trigger-size": 7,
      "length": "25%",
      "type": "btn",
      "color": "#333",
      "event-map": {
        "mouse-left": "niri msg action focus-column-right",
        "mouse-right": "niri msg action focus-workspace-down"
      }
    },
    {
      "pin-with-key": false,
      "edge": "bottom",
      "layer": "overlay",
      "thickness": 7,
      "extra-trigger-size": 7,
      "length": "40%",
      "type": "btn",
      "color": "#333",
      "event-map": {
        "mouse-left": "niri msg action fullscreen-window",
        "mouse-right": "niri msg action maximize-column",
        "mouse-middle": "niri msg action close-window"
      }
    },
    // =========== workspace ===========
    {
      "edge": "right",
      "layer": "overlay",
      "type": "workspace",
      "thickness": 6,
      // "preview-size": 7,
      "extra-trigger-size": 8,
      "offset": 10,
      "length": "25%",
      "active-increase": 0.2,
      "focus-color": "#7FC8FF",
      "default-color": "#4b7799",
      "border-width": 0,
      "border-radius": 0,
      "focused-only": true,
      // "margins": { "right": 20 },
      "preset": { "type": "niri", "filter-empty": false }
    },
    // =========== ring stats ===========
    {
      "namespace": "stats",
      "edge": "left",
      "position": "top",
      "offset": "2%",
      "margins": {
        "top": "5%"
      },
      "extra-trigger-size": 7,
      "layer": "overlay",
      "type": "wrap-box",
      "outlook": {
        "type": "board",
        "color": "#666666DD",
        "border-radius": 10,
        "margins": {
          "left": 14,
          "right": 16,
          "top": 14,
          "bottom": 14
        }
      },
      "items": [
        {
          "radius": 14,
          "ring-width": 8,
          "font-size": 20,
          "font-family": "JetBrainsMono Nerd Font",
          "fg-color": "#FFB77B",
          "bg-color": "#00000088",
          "type": "ring",
          "prefix": "  ",
          "suffix": " {preset}",
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "battery"
          }
        },
        {
          "radius": 14,
          "ring-width": 8,
          "font-size": 20,
          "font-family": "JetBrainsMono Nerd Font",
          "fg-color": "#FB8893",
          "bg-color": "#00000088",
          "type": "ring",
          "prefix": "  ",
          "suffix": " {preset}",
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "cpu"
          }
        },
        {
          "radius": 14,
          "ring-width": 8,
          "font-size": 20,
          "font-family": "JetBrainsMono Nerd Font",
          "bg-color": "#00000088",
          "type": "ring",
          "prefix": "  ",
          "suffix": " {preset}",
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "ram"
          }
        },
        {
          "radius": 14,
          "ring-width": 8,
          "font-size": 20,
          "font-family": "JetBrainsMono Nerd Font",
          "fg-color": "#BEAFD9",
          "bg-color": "#00000088",
          "type": "ring",
          "prefix": "  ",
          "suffix": " {preset}",
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "swap"
          }
        },
        {
          "radius": 14,
          "ring-width": 8,
          "font-size": 20,
          "font-family": "JetBrainsMono Nerd Font",
          "fg-color": "#82B2E3",
          "bg-color": "#00000088",
          "type": "ring",
          "prefix": "  ",
          "suffix": " {preset}",
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "disk"
          }
        }
      ]
    },
    // =========== time ===========
    {
      "namespace": "time",
      "edge": "top",
      "position": "right",
      "layer": "overlay",
      "extra-trigger-size": 7,
      "type": "wrap-box",
      "outlook": {
        "type": "board",
        "color": "#666666DD",
      },
      "items": [
        {
          "type": "text",
          "fg-color": "#FFFFFF",
          "font-size": 16,
          "preset": {
            "type": "time",
            "update-interval": 500,
            "format": "%T %v %A"
          }
        }
      ]
    },
    // =========== tray ===========
    {
      "namespace": "tray",
      "edge": "bottom",
      "position": "right",
      "layer": "overlay",
      "extra-trigger-size": 7,
      // "offset": 10,
      // "margins": {"right": 10},
      "type": "wrap-box",
      "align": "bottom-left",
      "outlook": {
        "type": "window",
        "color": "#666666CC"
      },
      "items": [
        {
          "font-family": "JetBrainsMono Nerd Font",
          "type": "tray",
          "icon-size": 10,
          "header-menu-stack": "menu-top",
          "header-menu-align": "left",
          "menu-draw-config": {
            "font-pixel-height": 20,
            "text-color": "#eee",
            "border-color": "#111"
          },
          "header-draw-config": {
            "text-color": "#eee"
          },
          "grid-align": "bottom-left"
        }
      ]
    }
  ]
}
